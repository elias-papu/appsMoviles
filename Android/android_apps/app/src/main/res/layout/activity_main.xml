<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola Mundo App"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuál es tu nombre?" />

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonAceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar" />

        <TextView
            android:id="@+id/textSaludo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí va un saludo"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/image_chile_morron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/chile_morron" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>