<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#236EAA" /> <!-- Color de fondo cuando está deshabilitado -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#236EAA" /> <!-- Color de fondo cuando está presionado -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Estado enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#4b81ad" /> <!-- Color de fondo cuando está enfocado -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:backgroundTint="#236EAA" /> <!-- Color de fondo normal -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>
